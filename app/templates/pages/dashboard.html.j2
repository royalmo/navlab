{% extends 'base/logged_in.html.j2' %}

{% block body %}

<div>
  <div class="bg-white bg-opacity-90 max-w-[1250px] mx-auto border-black border rounded p-4 flex items-center mb-7 justify-between">
    <h1 class="text-blue-900 font-bold mr-4 text-2xl text-center">Service list  
      <input type="text" placeholder="Search" class="text-black font-medium rounded-lg text-sm px-5 py-1.5 border-black border placeholder:text-black">
    </h1>
    <a href="newserver.html">
      <button type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-1.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">New service</button>
    </a>
  </div>
</div>
<div id="card-list" class="flex justify-center items-center">
  <article>
    <a href="newserver.html">
      <h2 class="p-2">Ubuntu Server</h2>
      <div class="flex">
        <div class="w-8/12">
          <span class="text-red-500 text-lg"><i class="fa fa-times"></i> Off</span>
          <br/>
          <br/>
          <button class="bg-green-500 p-2 rounded text-white hover:bg-green-800"><i class="fa fa-power-off"></i> Start</button>
        </div>
        <div class="w-4/12 flex justify-center items-center">
          <img src="https://cdn.freebiesupply.com/logos/large/2x/ubuntu-4-logo-png-transparent.png" alt="Proxmox logo">
        </div>
      </div>
    </a>
  </article>

  <article style="background-color: rgba(247, 217, 183, 1);">
    <a href="newserver.html">
      <h2 class="p-2">OpenVPN Server</h2>
      <div class="flex">
        <div class="w-8/12">
          <span class="text-orange-400 text-lg"><i class="fa fa-exclamation"></i> Unhealthy</span>
          <br/>
          <br/>
          <button class="bg-red-500 p-2 rounded text-white hover:bg-red-800"><i class="fa fa-power-off"></i> Shutdown</button>
        </div>
        <div class="w-4/12 flex justify-center items-center">
          <img src="https://seeklogo.com/images/O/openvpn-logo-1F15BD0826-seeklogo.com.png" alt="OpenVPN logo">
        </div>
      </div>
    </a>
  </article>

  <article>
    <a href="newserver.html">
      <h2 class="p-2">SSH Server</h2>
      <div class="flex">
        <div class="w-8/12">
          <span class="text-green-500 text-lg"><i class="fa fa-check"></i> Healthy</span>
          <br/>
          <br/>
          <button class="bg-red-500 p-2 rounded text-white hover:bg-red-800"><i class="fa fa-power-off"></i> Shutdown</button>
        </div>
        <div class="w-4/12 flex justify-center items-center">
          <img src="https://cdn-icons-png.flaticon.com/512/5453/5453855.png" alt="SSH logo">
        </div>
      </div>
    </a>
  </article>

  <article>
    <a href="newserver.html">
      <h2 class="p-2">DNS Server</h2>
      <div class="flex">
        <div class="w-8/12">
          <span class="text-red-500 text-xl"><i class="fa fa-times"></i> Off</span>
          <br/>
          <br/>
          <button class="bg-green-500 p-2 rounded text-white hover:bg-green-800"><i class="fa fa-power-off"></i> Start</button>
        </div>
        <div class="w-4/12 flex justify-center items-center">
          <img src="https://azcdnendpointjonahanderssontech.azureedge.net/wp-content/uploads/azuredns-2.png" alt="DNS logo">
        </div>
      </div>
    </a>
  </article>

  <article>
    <a href="newserver.html">
      <h2 class="p-2">Minecraft Server</h2>
      <div class="flex">
        <div class="w-8/12">
          <span class="text-red-500 text-xl"><i class="fa fa-times"></i> Off</span>
          <br/>
          <br/>
          <button class="bg-slate-400 p-2 rounded text-white hover:bg-slate-600"><i class="fa fa-question"></i> Start</button>
        </div>
        <div class="w-4/12 flex justify-center items-center">
          <img src="https://cdn.icon-icons.com/icons2/2699/PNG/512/minecraft_logo_icon_168974.png" alt="Minecraft logo">
        </div>
      </div>
    </a>
  </article>

  <article class="new items-center justify-center flex">
    <a href="newserver.html">
      <h2>+</h2>
    </a>
  </article>
</div>

{% endblock %}
