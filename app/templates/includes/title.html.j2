{% if request.args.get('search') is none %}
  {% set search_query = '' %}
{% else %}
  {% set search_query = request.args.get('search') %}
{% endif %}

<div
  class="bg-white bg-opacity-90 max-w-[1250px] mx-auto border-black border rounded p-4 flex flex-wrap items-center mb-7 justify-between">
  <form id="search_form" method="get" action="">
    <h1 class="text-blue-900 font-bold mr-4 text-2xl text-center leading-relaxed">{{ h1_text }}
      {% if not search_form_hide %}
        {{ search_form.search(class_="text-black font-medium rounded-lg text-sm pl-5 py-1.5 border-gray border
        placeholder:text-gray h-full", value_=search_query) }}
        <button type="submit" class="scale-[65%] ml-[-0.7em] px-2 pb-1 rounded hover:bg-gray-200">
          <i class="fa fa-sm fa-search"></i>
        </button>
      {% endif %}
    </h1>
  </form>
  {% if not left_button_hide %}
    <a href="{{ left_button_url }}" class="xm:mx-auto xm:py-1.5">
      <button type="button"
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-1.5">{{ left_button_text }}</button>
    </a>
  {% endif %}
</div>
